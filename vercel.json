{
  "buildCommand": "cd frontend/vue-project && npm install && npm run build",
  "outputDirectory": "frontend/vue-project/dist",
  "installCommand": "npm install --prefix frontend/vue-project",
  "framework": "vite",
  "env": {
    "VITE_SOROBAN_RPC_URL": "https://soroban-testnet.stellar.org",
    "VITE_CONTRACT_ADDRESS": "CA5C74SZ5XHXENOVQ454WQN66PMVSPMIZV5FYUR6OWDUQKC4PKOOXNPR",
    "VITE_SOROBAN_NETWORK": "testnet"
  },
  "rewrites": [
    {
      "source": "/:path((?!.*\\.).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
